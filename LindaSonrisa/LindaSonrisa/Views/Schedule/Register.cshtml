
@{
    ViewBag.Title = "Register";
}

<h2>Confirmar Reserva</h2>

<br />
<div class="container">
    <form action="/schedule/Save" onsubmit="return confirmacion();" method="post">


        <!---------Apoderado------->

        <div class="form-group row">

            <label for="validationCustom03" class="col-sm-1 col-form-label">Rut</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="rut_apo" id="rut_apo" placeholder="Rut Apoderado" value="@ViewBag.rutApoderado" required>
            </div>

        </div>
        <!---------Paciente------->
        <div class="form-group row">
            <label for="validationCustom03" class="col-sm-1 col-form-label">Nombre Paciente</label>

            <div class="col-sm-8">
                <input type="text" class="form-control" name="nombre_paciente" id="nombre_paciente" placeholder="Ingrese Nombre Paciente">
            </div>

        </div>
            <!---------Paciente------->
            <!---------Apoderado------->
            <div class="form-group row">
                <label for="Name" class="col-sm-1 col-form-label">Nombre</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" name="nom_apoderado" id="nom_apoderado" placeholder="Nombre Apoderado" value="@ViewBag.nombre">
                </div>
                <div class="col-sm-3">
                    <input type="text" class="form-control" name="p_apellido" id="p_apellido" placeholder="P Apellido" value="@ViewBag.p_apellido">
                </div>
                <div class="col-sm-3">
                    <input type="text" class="form-control" name="s_apellido" id="s_apellido" placeholder="S Apellido" value="@ViewBag.s_apellido">
                </div>
            </div>


            <div class="form-group row">
                <label for="Email1" class="col-sm-1 col-form-label">Email</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" name="Email" id="Email" placeholder="Email" value="@ViewBag.email">
                </div>
            </div>   


            <div class="form-group row">
                <label for="Celular1" class="col-sm-1 col-form-label">Celular</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" name="Celular" id="Celular" placeholder="Numero Contacto" value="@ViewBag.celular">
                </div>
            </div>
                <!---------Apoderado------->
                <!---------Profesional------->

                <input type="hidden" name="nombre_profesional" value="@ViewBag.nombreProf" />
                <input type="hidden" name="rut_profesional" value="@ViewBag.rutProf" />
                <input type="hidden" name="id_servicio" value="@ViewBag.id_servicio" />
                <input type="hidden" name="hora" value="@ViewBag.hora" />
                <input type="hidden" name="descripcion" value="@ViewBag.descripcion" />
                <input type="hidden" name="dia" value="@ViewBag.dia" />

                <button class="btn btn-info">Confirmar</button>
    </form>
</div>


